{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./__tests__"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es2020"
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "jest.config.cjs",
    ".vscode",
  ]
}